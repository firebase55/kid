<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blur"
    android:layout_height="match_parent"
    tools:context=".mainscrean">
   <ScrollView
       android:layout_width="fill_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_height="fill_parent">
       <LinearLayout
           android:layout_width="fill_parent"
           android:orientation="vertical"
           android:layout_height="fill_parent">
           <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:background="@drawable/newa"
                   android:layout_height="320dp">
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="330dp"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       android:layout_height="135dp">
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           app:cardCornerRadius="10dp"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:layout_height="match_parent">
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent">
                             <ImageView
                                 android:layout_width="50dp"
                                 android:src="@drawable/abc"
                                 android:id="@+id/number"
                                 android:layout_centerInParent="true"
                                 android:layout_height="50dp" />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:text="alphabatic"
                                 android:textStyle="bold"
                                 android:textColor="#000"
                                 android:layout_centerHorizontal="true"
                                 android:layout_below="@+id/number"
                                 android:layout_marginBottom="10dp"
                                 android:layout_marginTop="10dp"
                                 android:layout_height="wrap_content" />
                             <Button
                                 android:layout_width="match_parent"
                                 android:id="@+id/imageabc"
                                 android:background="@android:color/transparent"
                                 android:layout_height="match_parent" />
                         </RelativeLayout>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           app:cardCornerRadius="10dp"
                           android:gravity="center"
                           android:layout_marginLeft="5dp"
                           android:layout_height="match_parent">
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <ImageView
                                   android:layout_width="50dp"
                                   android:src="@drawable/onw1"
                                   android:id="@+id/abc"
                                   android:layout_centerInParent="true"
                                   android:layout_height="50dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:text="Number"
                                   android:textStyle="bold"
                                   android:textColor="#000"
                                   android:layout_centerHorizontal="true"
                                   android:layout_below="@+id/abc"
                                   android:layout_marginBottom="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content" />
                               <Button
                                   android:layout_width="match_parent"
                                   android:id="@+id/numberid"
                                   android:background="@android:color/transparent"
                                   android:layout_height="match_parent" />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       android:layout_height="135dp">
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           app:cardCornerRadius="10dp"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:layout_height="match_parent">
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <ImageView
                                   android:layout_width="50dp"
                                   android:src="@drawable/qz"
                                   android:id="@+id/qz"
                                   android:layout_centerInParent="true"
                                   android:layout_height="50dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:text="Quiz"
                                   android:textStyle="bold"
                                   android:textColor="#000"
                                   android:layout_centerHorizontal="true"
                                   android:layout_below="@+id/qz"
                                   android:layout_marginBottom="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content" />
                               <Button
                                   android:layout_width="match_parent"
                                   android:onClick="custon_diloag"
                                   android:background="@android:color/transparent"
                                   android:layout_height="match_parent" />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           app:cardCornerRadius="10dp"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:layout_marginLeft="5dp"
                           android:layout_height="match_parent">
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <ImageView
                                   android:layout_width="50dp"
                                   android:src="@drawable/speech"
                                   android:id="@+id/speech"
                                   android:layout_centerInParent="true"
                                   android:layout_height="50dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:text="Text to Speech"
                                   android:textStyle="bold"
                                   android:textColor="#000"
                                   android:layout_centerHorizontal="true"
                                   android:layout_below="@+id/speech"
                                   android:layout_marginBottom="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content" />
                               <Button
                                   android:layout_width="match_parent"
                                   android:onClick="dilaog"
                                   android:background="@android:color/transparent"
                                   android:layout_height="match_parent" />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginBottom="10dp"
                       android:layout_height="135dp">
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           app:cardCornerRadius="10dp"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:layout_marginRight="5dp"
                           android:layout_height="match_parent">
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <ImageView
                                   android:layout_width="50dp"
                                   android:src="@drawable/video"
                                   android:id="@+id/pron"
                                   android:layout_centerInParent="true"
                                   android:layout_height="50dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:text="Watch Cartoons "
                                   android:textStyle="bold"
                                   android:textColor="#000"
                                   android:layout_centerHorizontal="true"
                                   android:layout_below="@+id/pron"
                                   android:layout_marginBottom="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content" />
                               <Button
                                   android:layout_width="match_parent"
                                   android:id="@+id/watchid"
                                   android:background="@android:color/transparent"
                                   android:layout_height="match_parent" />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           app:cardCornerRadius="10dp"
                           android:gravity="center"
                           android:layout_marginLeft="5dp"
                           android:layout_height="match_parent">
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">
                               <ImageView
                                   android:layout_width="50dp"
                                   android:src="@drawable/camera"
                                   android:id="@+id/watch"
                                   android:layout_centerInParent="true"
                                   android:layout_height="50dp" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:text="pronunciation Words"
                                   android:textStyle="bold"
                                   android:textColor="#000"
                                   android:layout_centerHorizontal="true"
                                   android:layout_below="@+id/watch"
                                   android:layout_marginBottom="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content" />
                               <Button
                                   android:layout_width="match_parent"
                                   android:id="@+id/pronid"
                                   android:background="@android:color/transparent"
                                   android:layout_height="match_parent" />
                           </RelativeLayout>
                       </androidx.cardview.widget.CardView>

                   </LinearLayout>



               </LinearLayout>
           </RelativeLayout>

       </LinearLayout>

   </ScrollView>
</RelativeLayout>